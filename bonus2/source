#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int language = 0;

void	greetuser(char *name) {
	char	str[72];  // 0x48

	if (language == 0) {
		str = "Hello ";
	}
	else if (language == 1) {
		str = "Hyvää päivää ";
	}
	else if (language == 2) {
		str = "Goedemiddag! ";
	}

	strcat(str, name);
	puts(str);
}

void	main(int ac, char **av) {
	// esp
	char	str2[80]  // 0xa0 - 0x50 = 80
	// esp + 0x50
	char	str[76];  // (0xa0 - 0x50) - (0xa0 - 0x9c) = 76
	// esp + 0x9c = 4
	char	*lang = getenv("LANG");

	if (ac != 3) {
		return 1;
	}

	bzero(str, 19);
	strncpy(str, av[1], 40);
	strncpy(str + 40, av[2], 32);

	if (lang != NULL) {
		if (memcmp(lang, "fi", 2) == 0) {
			language = 1;
		}
		else if (memcmp(lang, "nl", 2) == 0) {
			language = 2;
		}
	}

	for (i = 0; i < 13; ++i) {
		str2[i] = str[i]
	}

	return greetuser(str2);
}
